#
#  http://editorconfig.org
#
# Please have your editor honor these settings!
#

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
# Many existing JS files without a trailing newline
insert_final_newline = false

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
